<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="txtOne"
            type="String" />

        <variable
            name="txtTwo"
            type="String" />

        <variable
            name="user"
            type="com.databindinglivedataviewmodel.app.models.User" />

        <variable
            name="mainViewModel"
            type="com.databindinglivedataviewmodel.app.viewmodels.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.firstName, default=`Place Holder One`}"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/includeSecondView"
            layout="@layout/layout_for_include_text_in_databinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bind:layout_constraintTop_toBottomOf="@+id/textView"
            bind:secondView="@{mainViewModel}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
